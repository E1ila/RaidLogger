    <Frame name="RaidLoggerFrame">
        <Scripts>
            <OnLoad>
                self:RegisterEvent("ADDON_LOADED");
                self:RegisterEvent("RAID_ROSTER_UPDATE");
                self:RegisterEvent("GROUP_ROSTER_UPDATE");
                self:RegisterEvent("ENCOUNTER_END");
                self:RegisterEvent("RAID_INSTANCE_WELCOME");
                self:RegisterEvent("ZONE_CHANGED_NEW_AREA");
                self:RegisterEvent("CHAT_MSG_LOOT");
            </OnLoad>
            <OnEvent>
                self:OnEvent(event, ...)
            </OnEvent>
            <OnUpdate>
                self:OnUpdate()
            </OnUpdate>
        </Scripts>
    </Frame>



    <!-- Question Dialog -->

    <Frame name="RaidLogger_QuestionDialog" frameStrata="DIALOG" parent="UIParent" enableMouse="true" movable="true">
        <Size>
            <AbsDimension x="250" y="100"/>
        </Size>
        <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
            <EdgeSize>
                <AbsValue val="1"></AbsValue>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16" />
            </TileSize>
        </Backdrop>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="100"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Scripts>
            <OnLoad>
                self:SetBackdropColor (0, 0, 0, 0.9)
                self:SetBackdropBorderColor(0, 0, 0, 1)
                self:RegisterForDrag("LeftButton")
                self:SetUserPlaced(true)
                tinsert(UISpecialFrames, self:GetName())
            </OnLoad>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
        <Frames>

            <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
                <Size>
                    <AbsDimension x="26" y="26"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="1" y="1"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        RaidLogger_QuestionDialog:Hide()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_CloseButton-->

            <Frame name="$parent_Title">
                <Size>
                    <AbsDimension x="120" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="2" y="-2"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                    <EdgeSize>
                        <AbsValue val="1"></AbsValue>
                    </EdgeSize>
                    <TileSize>
                        <AbsValue val="16" />
                    </TileSize>
                </Backdrop>
                <Scripts>
                    <OnLoad>
                        self:SetBackdropColor(0.5, 0.5, 0.5, 0.2)
                        self:SetBackdropBorderColor(0, 0, 0, 1)
                    </OnLoad>
                </Scripts>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parent_Text" inherits="ChatFontNormal" font="RaidLoggerFont" text="Dialog Title">
                            <Color r="0.3" g="0.7" b="1"/>
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>            <!--$parent_Title-->
            <Button name="$parent_No" inherits="UIPanelButtonTemplate" text="No">
                <Size>
                    <AbsDimension x="70" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="37" y="5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        RaidLogger_QuestionDialog:Hide()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_No-->
            <Button name="$parent_Yes" inherits="UIPanelButtonTemplate" text="Yes">
                <Size>
                    <AbsDimension x="70" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-37" y="5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        RaidLogger_QuestionDialog:Hide()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_Yes-->
        </Frames>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="$parent_Question" inherits="ChatFontNormal" font="RaidLoggerFont" text="Question?">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>    <!--RaidLogger_QuestionDialog-->



    <Frame name="RaidLogger_RaidWindow" parent="UIParent" frameStrata="HIGH" enableMouse="true" movable="true" resizable="true">
        <Size x="200" y="200" />
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <ResizeBounds>
            <minResize x="300" y="200" />
            <maxResize x="600" y="800" />
        </ResizeBounds>
        <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
            <EdgeSize>
                <AbsValue val="1"></AbsValue>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16" />
            </TileSize>
        </Backdrop>
        <Scripts>
            <OnLoad>
   			    self:SetBackdropColor (0.1, 0.1, 0.1, 1)
    		    self:SetBackdropBorderColor(0, 0, 0, 1)
            </OnLoad>
        </Scripts>

        <Frames>

            <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="1" y="1" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        RaidLogger_RaidWindow:Hide()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_CloseButton-->

            <Frame name="$parent_Title" enableMouse="true" movable="true" resizable="true">
                <Size x="120" y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="2" y="-2"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                    <EdgeSize>
                        <AbsValue val="1"></AbsValue>
                    </EdgeSize>
                    <TileSize>
                        <AbsValue val="16" />
                    </TileSize>
                </Backdrop>
                <Scripts>
                    <OnLoad>
       			        self:SetBackdropColor(0.5, 0.5, 0.5, 0.1)
        	        	self:SetBackdropBorderColor(0, 0, 0, 0)
                        self:RegisterForDrag("LeftButton")
                    </OnLoad>
                    <OnDragStart>
                        RaidLogger_RaidWindow:StartMoving()
                    </OnDragStart>
                    <OnDragStop>
          	            RaidLogger_RaidWindow:StopMovingOrSizing();
                    </OnDragStop>
                </Scripts>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parent_Text" inherits="ChatFontNormal" font="RaidLoggerFont" text="Active Raid">
                            <Color r="0.3" g="0.7" b="1"/>
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>            <!--$parent_Title-->

            <Frame name="$parent_Buttons" enableMouse="true" movable="true" resizable="true">
                <Size y="26" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_Title" relativePoint="BOTTOMLEFT">
                        <Offset x="0" y="-2" />
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent_Title" relativePoint="BOTTOMRIGHT">
                        <Offset x="0" y="-2" />
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                    <EdgeSize>
                        <AbsValue val="1" />
                    </EdgeSize>
                    <TileSize>
                        <AbsValue val="16" />
                    </TileSize>
                </Backdrop>
                <Scripts>
                    <OnLoad>
                        self:SetBackdropColor(0, 0, 0, 1)
        		        self:SetBackdropBorderColor(0, 0, 0, 0)
                    </OnLoad>
                </Scripts>
                <Frames>
                    <Button name="$parent_LootTab">
                        <Size>
                            <AbsDimension x="70" y="22"/>
                        </Size>
                        <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                            <EdgeSize>
                                <AbsValue val="1"></AbsValue>
                            </EdgeSize>
                            <TileSize>
                                <AbsValue val="16" />
                            </TileSize>
                        </Backdrop>
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" x="8" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parent_Text" inherits="ChatFontNormal" font="RaidLoggerSmallFont" text="Loot">
                                    <Color r="1" g="1" b="1"/>
                                    <Anchors>
                                        <Anchor point="CENTER" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnLoad>
            				    self:RegisterForClicks("LeftButtonUp", "RightButtonUp")
                                self.label = RaidLogger_RaidWindow_Buttons_LootTab_Text
                                self.selected = true 
                            </OnLoad>
                            <OnEnter>
                                RaidLogger:SetTabBackdropColor(self, true)
                            </OnEnter>
                            <OnLeave>
                                RaidLogger:SetTabBackdropColor(self, false)
                            </OnLeave>
                            <OnClick>
                                self:Clicked(button)
                            </OnClick>
                        </Scripts>
                    </Button>                    <!--$parent_LootTab-->

                    <Button name="$parent_PlayersTab">
                        <Size>
                            <AbsDimension x="70" y="22"/>
                        </Size>
                        <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                            <EdgeSize>
                                <AbsValue val="1"></AbsValue>
                            </EdgeSize>
                            <TileSize>
                                <AbsValue val="16" />
                            </TileSize>
                        </Backdrop>
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativeTo="$parent_LootTab" relativePoint="BOTTOMRIGHT" x="8" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parent_Text" inherits="ChatFontNormal" font="RaidLoggerSmallFont" text="Participants">
                                    <Color r="1" g="1" b="1"/>
                                    <Anchors>
                                        <Anchor point="CENTER" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnLoad>
            				    self:RegisterForClicks("LeftButtonUp", "RightButtonUp")
                                self.label = RaidLogger_RaidWindow_Buttons_PlayersTab_Text
                            </OnLoad>
                            <OnEnter>
                                RaidLogger:SetTabBackdropColor(self, true)
                            </OnEnter>
                            <OnLeave>
                                RaidLogger:SetTabBackdropColor(self, false)
                            </OnLeave>
                            <OnClick>
                                self:Clicked(button)
                            </OnClick>
                        </Scripts>
                    </Button>                    <!--$parent_PlayersTab-->

                </Frames>
            </Frame>            <!--$parent_Buttons-->

            <Button name="$parent_Resize">
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset x="-2" y="-2" />
                    </Anchor>
                </Anchors>
                <NormalTexture file="Interface\AddOns\RaidLogger\assets\resize" />
                <HighlightTexture file="Interface\AddOns\RaidLogger\assets\resize" />
                <Scripts>
                    <OnMouseDown>
                        RaidLogger_RaidWindow:StartSizing("BOTTOMLEFT")
                    </OnMouseDown>
                    <OnMouseUp>
                        RaidLogger_RaidWindow:StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
            </Button>

            <ScrollFrame name="$parent_LootTab" inherits="UIPanelScrollFrameTemplate" enableMouse="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_Buttons" relativePoint="BOTTOMLEFT">
                        <Offset x="5" y="-3" />
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-25" y="3" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:SetHorizontalScroll(0)
                        self:SetVerticalScroll(0)
                        self.rows = {}
                    </OnLoad>
                </Scripts>
                <ScrollChild>
                    <Frame name="$parent_Content">
                        <Size x="10" y="10" />
                        <Anchors>
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                RaidLogger_RaidWindow_LootTab.scrollContent = self
                            </OnLoad>
                        </Scripts>
                        <Frames>
                            <EditBox name="RaidLogger_Loot_SearchBox" letters="80" autoFocus="false">
                                <Size x="150" y="20" />
                                <Anchors>
                                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="RaidLogger_RaidWindow_LootTab" />
                                    <Anchor point="TOP" y="-1" />
                                </Anchors>
                                <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                                    <EdgeSize>
                                        <AbsValue val="1"></AbsValue>
                                    </EdgeSize>
                                    <TileSize>
                                        <AbsValue val="16" />
                                    </TileSize>
                                </Backdrop>
                                <Layers>
                                    <Layer level="BACKGROUND">
                                        <Texture file="Interface\AddOns\RaidLogger\assets\search" alphaMode="ADD">
                                            <Size x="16" y="16" />
                                            <Anchors>
                                                <Anchor point="RIGHT" x="-4" />
                                            </Anchors>
                                            <Color r="0.5" g="0.5" b="0.5" a="0.8" />
                                        </Texture>
                                    </Layer>
                                </Layers>
                                <Scripts>
                                    <OnLoad>
                                        self:SetBackdropColor(0, 0, 0, 0.8)
            	                    	self:SetBackdropBorderColor(0.5, 0.5, 0.5, 0.3)
                                    </OnLoad>
                                    <OnEscapePressed>
                                        self:ClearFocus()
                                    </OnEscapePressed>
                                    <OnTabPressed>
                                        self:ClearFocus()
                                    </OnTabPressed>
                                    <OnTextChanged>
                                        RaidLogger_RaidWindow_LootTab:Refresh()
                                    </OnTextChanged>
                                    <OnEnterPressed>
                                        self:ClearFocus()
                                    </OnEnterPressed>
                                </Scripts>
                                <FontString inherits="RaidLoggerFont" />
                            </EditBox>
                        </Frames>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>            <!--$parent_Scroll-->

            <ScrollFrame name="$parent_PlayersTab" inherits="UIPanelScrollFrameTemplate" enableMouse="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_Buttons" relativePoint="BOTTOMLEFT">
                        <Offset x="5" y="-3" />
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-25" y="3" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:SetHorizontalScroll(0)
                        self:SetVerticalScroll(0)
                        self.rows = {}
                    </OnLoad>
                </Scripts>
                <ScrollChild>
                    <Frame name="$parent_Content">
                        <Size x="10" y="10" />
                        <Anchors>
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                RaidLogger_RaidWindow_PlayersTab.scrollContent = self
                            </OnLoad>
                        </Scripts>
                        <Frames>
                            <EditBox name="RaidLogger_Players_SearchBox" letters="80" autoFocus="false">
                                <Size x="150" y="20" />
                                <Anchors>
                                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="RaidLogger_RaidWindow_PlayersTab" />
                                    <Anchor point="TOP" y="-1" />
                                </Anchors>
                                <Backdrop bgFile="Interface/Buttons/WHITE8X8" edgeFile="Interface/Buttons/WHITE8X8" tile="true">
                                    <EdgeSize>
                                        <AbsValue val="1"></AbsValue>
                                    </EdgeSize>
                                    <TileSize>
                                        <AbsValue val="16" />
                                    </TileSize>
                                </Backdrop>
                                <Layers>
                                    <Layer level="BACKGROUND">
                                        <Texture file="Interface\AddOns\RaidLogger\assets\search" alphaMode="ADD">
                                            <Size x="16" y="16" />
                                            <Anchors>
                                                <Anchor point="RIGHT" x="-4" />
                                            </Anchors>
                                            <Color r="0.5" g="0.5" b="0.5" a="0.8" />
                                        </Texture>
                                    </Layer>
                                </Layers>
                                <Scripts>
                                    <OnLoad>
                                        self:SetBackdropColor(0, 0, 0, 0.8)
            	                    	self:SetBackdropBorderColor(0.5, 0.5, 0.5, 0.3)
                                    </OnLoad>
                                    <OnEscapePressed>
                                        self:ClearFocus()
                                    </OnEscapePressed>
                                    <OnTabPressed>
                                        self:ClearFocus()
                                    </OnTabPressed>
                                    <OnTextChanged>
                                        RaidLogger_RaidWindow_PlayersTab:Refresh()
                                    </OnTextChanged>
                                    <OnEnterPressed>
                                        self:ClearFocus()
                                    </OnEnterPressed>
                                </Scripts>
                                <FontString inherits="RaidLoggerFont" />
                            </EditBox>                            <!-- RaidLogger_Players_SearchBox -->
                        </Frames>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>            <!--$parent_Scroll-->

        </Frames>
    </Frame>    <!--RaidLogger_RaidWindow-->

    <Script File="RaidLogger.lua"/>

</Ui>